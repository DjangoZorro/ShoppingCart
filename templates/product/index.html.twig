{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
                <th>Description</th>
                <th>Actions</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.image }}</td>
                <td>{{ product.description }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                    <a class="btn btn-success" href="{{ path('product_added', {'id': product.id}) }}">add</a>
                    <td>{{ include('product/_delete_form.html.twig') }}</td>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('product_new') }}">Create new</a>
{% endblock %}
